  .order_foods
    clearFix()
    width 100%
    background-color #ffffff
    margin-top 6px
    .food_classes
      float left
      width 92px
      height 460px
      background-color #f5f8fd
      .food_classes_list /*ul*/
        width 72px
        margin 0 5px 0 15px
        .food_classes_item  /*li*/
          height 54px
          border-bottom 1px gray solid
          display flex  /*为了子元素垂直居中*/
          align-items center
          .classes_content
            width 100% /*注意，这里不能设置高度，否则，不会只显示两行文字（会超出两行文字）*/
            text-overflow -o-ellipsis-lastline  /*以下六行显示超过两行文字就显示省略号,好像该元素设置position也无效*/
            overflow hidden
            text-overflow ellipsis
            display -webkit-box  /*高度随文字子适应，不能设置高度，否则该属性无效*/
            -webkit-line-clamp 2  /*只显示两行文字*/
            -webkit-box-orient vertical
            .classes_icon  /*span--1*/
              margin-right 5px
              .iconfont
                font-size 12px
                color black
            .classes_name    /*span--2*/
              font-size 12px
      .food_lists_con
        float left
        width 77%
        .food_lists /*ul*/
          width 100%
          .food_item /*li*/
            width 100%
            .food_item_name_con
              width 100%
              padding-left 20px
              height 30px
              font-size 14px
              line-height 30px
              background-color #f3f5f7
            .food_item_detail /*ul*/
              display flex
              align-items center /*!*行内元素垂直居中*!*/
              height 120px
              margin 0 10px 0 15px
              border-bottom 1px gray solid
              .food_item_icon /*li*/
                width 56px
                height 56px
                margin-right 10px
                .iconfont
                  font-size 56px
              .food_item_content  /*li*/
                flex 1
                height 100% /*!*元素沾满父元素高度*，不然元素会垂直居中（上面设置的align-items center）!*/
                .food_item_name
                  margin-top 8px
                  font-size 18px
                  color #302e2f
                .food_item_describe
                  width 100% /*注意，这里不能设置高度，否则，不会只显示两行文字（会超出两行*/
                  color #bbbab8
                  font-size 12px
                  margin-top 8px
                  text-overflow -o-ellipsis-lastline  /*以下六行显示超过两行文字就显示省略号,好像该元素设置position也无效*/
                  overflow hidden
                  text-overflow ellipsis
                  display -webkit-box  /*高度随文字子适应，不能设置高度，否则该属性无效*/
                  -webkit-line-clamp 2  /*只显示两行文字*/
                  -webkit-box-orient vertical
                .food_item_rate
                  color #bbbab8
                  font-size 12px
                  margin-top 8px
                  .monthly_sales
                    margin-right 15px
                .food_item_price
                  clearFix()
                  color #bbbab8
                  font-size 14px
                  margin-top 8px
                  .new_price
                    float left
                    color red
                  .old_price
                    float left
                    margin-left 8px
                    font-size 12px
                    text-decoration line-through /*字体中间横线*/
                  .buy_num_con
                    float right
                    .iconfont_con_1
                      display inline-block
                      border 1px #facd3b solid
                      border-radius 5px
                      height 20px
                      width  20px
                      line-height 20px
                      text-align center
                      .iconfont
                        font-size 14px
                        color black
                    .buy_num
                      font-size 14px
                      margin 0 10px
                      color black
                    .iconfont_con_2
                      display inline-block
                      border 1px #facd3b solid
                      border-radius 5px
                      height 20px
                      width  20px
                      line-height 20px
                      text-align center
                      background-color #facd3b
                      .iconfont
                        font-size 14px
                        color black
            >:last-child  /*最后一个子元素不显示下划线*/
              border transparent
