@import "../../../src/common/stylus/mixins.styl"
.order_page
  width 100%
  height 100%
  background-color #FFFFFF
  /*头部css*/
  .search_header
    position fixed/*固定定位在顶部*/
    top 0
    left 0
    z-index 10000
    width 100%
    height  50px
    line-height 50px /*行内元素垂直居中*/
    background-color #02b6fd
    text-align center /*行内元素水平居中*/
    >a
      width 100%
      .header_title_text
        display inline-block
        width 200px
        font-size 20px
        color #ffffff
  /*订单页面中间部分*/
  .order_middle
    position absolute
    top 184px
    left 0
    width 100%
    .img_container
      width 100%
      text-align center
      .img_person
        display inline-block
        width 248px
        height 209px
    .order_tips
      display block
      margin-top 10px
      text-align center
    .button_container
      width 100%
      text-align center/*按钮水平居中显示*/
      padding-top 10px
      .order_login
        display inline-block
        width 94px
        height 36px
        background-color: #02b6fd;
        font-size 14px
        border-radius 5px
        color #ffffff
        outline none /*outline（轮廓）是绘制于元素周围的一条线，位于边框边缘的外围，可起到突出元素的作用*/
        border 0 /*没有边框*/
  /*顶部导航*/
  .footer_container
    top-border-1px(#e4e4e4) /*一像素上边框*/
    position fixed /*固定定位在底部*/
    z-index 100 /*显示级别*/
    bottom 0
    left 0
    width 100%
    height 50px
    background-color: #ffffff;
    display flex  /*实现四列两行*/
    flex-direction row /*主轴行排*/
    justify-content center /*主轴对齐方式*/
    .footer_item
      flex 1
      display flex  /*实现两行*/
      text-align center /*行内元素居中*/
      flex-direction column
      align-items center
      margin 5px
      color #999999
      &.on
        color #02a774
      span
        font-size 12px
        margin-top 2px
        margin-bottom 2px
        .iconfont
          font-size 22px