@import "../../../src/common/stylus/mixins.styl"
.search_static
  position absolute
  top 50px
  left 0
  width 100%
  bottom 50px
  background-color #FFFFFF
  .search_form
    clearFix()
    position fixed
    width 95%
    height 34px
    margin 10px
    /*图标与输入框*/
    .input_container
      float left
      display flex  /*两列布局，一列定宽，一列自适应*/
      align-items center /*副轴垂直居中*/
      width 75%
      height 31px /*输入框与提交按钮框输入一样高度时，两者高度不一样，所以这个设置小一些*/
      border 2px #02b6fd solid /*将图标以及输入框框起来*/
      /*border-radius 20px*/  /*圆角*/
      padding-left 10px
      .input_icon
        .iconfont
          font-size 22px
      .search_content
        /*display inline-block*/
        height 30px
        margin-left 5px
        flex 1
        font-size 16px
        outline none /*无外边框*/
    /*按钮*/
    .summit_text
      float right
      display inline-block
      width 20%
      height 34px/*输入框与提交按钮框输入一样高度时，两者高度不一样，所以这个设置大一些*/
      font-size 16px
      border 2px  #02b6fd solid
      background-color #02b6fd
      color #FFFFFF
  .shop_container
    width 100%
    position absolute
    top 50px
    left 0
    bottom 50px
    overflow hidden
    .shops
      width 100%
      .shop_item
        box-sizing border-box
        width 100%
        height 140px
        padding 20px 10px 20px 10px /*抽成单个组件改过*/
        background-color #ffffff
        margin-bottom 10px
        border 1px #ffffff solid
        border-radius 25px
        >a
          clearFix()
          display block
          width 100%
          height 100px
          .shop_logo
            float left /*浮动*/
            display inline-block
            width 25%
            img
              display inline-block/*设置行内块级元素，可以设置宽和高*/
              width 100px
              height 96px
          .shop_information
            float left
            padding-left 15px/*这里抽成单个组件的时候，改变了一下值*/
            width 70%
            .information_list
              clearFix()
              width 100%
              height 24px
              line-height 24px
              span
                float left
                display inline-block
                font-size 24px
                color black
                line-height 24px
                width 200px
                &::before
                  display inline-block
                  height 24px
                  line-height 24px
                  font-size 12px
                  color black
                  background-color: #dce775;
                  border-radius 2px
                  content "品牌"
              .shop_detail
                float right
                .guarantee
                  display inline-block
                  border solid #eae8e8 1px
                  font-size 15px
                  line-height 15px
            .shop_order
              clearFix()
              width 100%
              padding-top 22px
              height 18px
              line-height 18px
              .shop_star_container
                float left
                .star_item
                  .iconfont
                    font-size 16px
                    color #ff9a04
              .shop_score
                float left
                padding-left 4px
              .order_number
                float left
                padding-left 8px
              .shop_delivery
                float right
                border solid #4c82ed 1px
                color #4c82ed
                font-size 14px
            .pay_container
              width 100%
              padding-top 20px
              font-size 14px
              color #adadad
              .delivery_pay
                padding-left 10px
    &::after/*商家列表多时，解决底部导航隐藏商家列表内容*/
      display block
      width 100%
      height 50px
      content "" /*一定需要加这个才可以*/