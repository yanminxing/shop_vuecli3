@import "../../../common/stylus/mixins.styl"
/*头部css*/
.header_top
  width 100%
  height 50px
  background-color #02b6fd
  z-index 100000
  position fixed/*主要是通过子绝父固（非static）方式来设置左右定宽，中间自适应*/
  top 0
  left 0
  .header_search  /*因为在reset.CSS中，a标签设置了默认的样式，所以相关样式并不会继承父类的*/
    /*行内元素（如a标签），在文档流中的时候因为是行内元素所以无法设置宽高；而当设置了绝对定位或者浮动，会生成块框（即变成块元素），所以就可以设置宽高了。*/
    position absolute
    left 15px /*三列布局*/
    top 50%/*垂直居中*/
    transform translateY(-50%)/*垂直居中*/
    width 10%
    .icon-sousuo
      font-size 23px/*我的谷歌浏览器中字号是16px，rem是相对html根元素的单位*/
      color #FFFFFF
  .header_title
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)/*水平垂直居中*/
    width 50%
    text-align center
    .header_title_text/*span是行内元素，需要设置为块级元素，此时宽度和高度才有效（能继承父类的宽度和高度）*/
      font-size 18px
      color #ffffff
      display block
  .header_login
    position absolute /*主要设置垂直居中和三列布局*/
    right 15px
    top 50%
    transform translateY(-50%)
    .header_login_text
      font-size 14px
      line-height 14px
      color #ffffff
    .header_login_icon
      .iconfont
        font-size 23px
        color #ffffff
