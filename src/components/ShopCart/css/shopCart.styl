@import "../../../common/stylus/mixins.styl"
.food_car_all
  position fixed
  background-color #FFFFFF
  z-index 150  /*整个比商家页面的其他组件都高，整体显示是最高的*/
  width 100%
  bottom 0
  left 0
  height 50px  /*为了不让购物车没有食品的时候，正常显示在底下*/
  .car_no_food_con
    clearFix()
    width 94%
    height 50px
    margin 0 15px
    font-size 14px
    color #ffffff
    background-color #010101
    border-radius 25px
    .car_con
      position relative
      float left
      margin -16px 10px 0 10px
      width 50px
      height 50px
      line-height 50px
      text-align center
      border-radius 50%  /*设置圆圈,需要宽和高相等*/
      background-color black  /*设置背景色，以显示圆圈*/
      .iconfont
        font-size 30px
        color #bab9b4
      .food_count_con
        position absolute
        top 0
        right -10px
        width 26px
        height 26px
        line-height 26px
        border-radius 50%/*设置圆圈,需要宽和高相等*/
        background-color red  /*设置背景色，以显示圆圈*/
        text-align center
        .food_count
          font-size 14px
          color width
      &.car_has_food
        background-color #facd3b
        .iconfont
          color black
    .need_money_con
      float left
      margin-top 8px
      font-size 10px
      .money
        font-size 18px
        margin-bottom  8px
    .need_left_money
      float right
      color grey
      padding 0 15px
      height 50px
      line-height 50px
    .to_pay_money
      float right
      color black
      margin-right 0
      height 50px
      line-height 50px
      background-color #facd3b
      padding 0 15px
      border-radius 0 25px 25px 0 /*右边圆角*/
  .food_shop_detail/*购物车列表*/
    position absolute
    left 0
    top 0
    z-index -1 /*为了没有食物时，购物车正常显示*/
    width 100%
    font-size 14px
    transform translateY(-100%)
    background-color #FFFFFF
    .car_detail-title  /*购物车列表标题*/
      clearFix()
      padding 16px 20px
      height 20px
      line-height 20px
      border-bottom 1px #9da1a3 solid
      .car_name
        float left
        font-size 20px
      .clear_car_con
        float right
        color #9da1a3
        .iconfont
          margin-right 3px
        &.clearCar-enter-active, &.clearCar-leave-active
          transition  transform  0.3s
        &.clearCar-enter, &.clearCar-leave-to
          transform translateY(0)
    .car_shop_list  /*购物车列表容器*/
      box-sizing border-box  /*这样设置，该元素才不会超出屏幕宽度*/
      width 100%
      padding 0 20px
      max-height 400px  /*直接设置高度的话，那么列表的高度就设置死了*/
      overflow hidden
      .car_list_wrapper  /*ul*/
        width 100%
        .shop_item    /*li*/
          width 100%
          height 60px
          display flex
          margin-top 16px
          .car_food_image
            height 60px
            width 60px
            text-align center
            line-height 60px
            .foo_img
              width 50px
              height 50px
          .car_food_detail_con
            clearFix()
            margin-left 10px
            flex 1
            border-bottom 1px #f6f6f6 solid
            .car_food_name
              display block
              font-size 16px
            .price_and_buy
              clearFix()
              margin-top 16px
              height 20px
              line-height 20px
              .now_price
                float left
                font-size 14px
                color red
                margin-right 10px
              .old_price
                float left
                font-size 10px
                color grey
                text-decoration line-through /*字体中间横线*/
              .car_buy_num
                float right
        >:last-child   /*最后一个子元素下面的div没有下划线*/
          .car_food_detail_con
            border transparent
    &::after  /*增加与购物车固定地方的距离*/
      display block  /*一定要设置这个，下面才能设置宽和高度*/
      content ""
      height 10px
      width 100%
  .food_list_show
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index -20
    background-color #DCDBDC
    backdrop-filter blur(10px)  /*CSS 属性可以让你为一个元素后面区域添加图形效果（如模糊或颜色偏移）。 因为它适用于元素背后的所有元素，
                               为了看到效果，必须使元素或其背景至少部分透明。*/
    opacity 0.5 /* 1为完全不透明 */ /*opacity属性指定了一个元素的不透明度。换言之，opacity属性指定了一个元素后面的背景的被覆盖程度。*/
    &.showList-enter-active, &.showList-leave-active
      transition  0.5s
    &.showList-enter, &.showList-leave-to
      opacity 0
      background rgba(7, 17, 27, 0)