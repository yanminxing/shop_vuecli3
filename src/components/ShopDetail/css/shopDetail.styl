@import "../../../common/stylus/mixins.styl"
.extend_modules_con
  width 100%
  background-color #FFFFFF
  .discounts_extend_con
    width 100%
    .discounts_extend
      width 94%
      margin 10px 20px 0 20px
      .discounts_name
        top-border-1px(#dcd7d7)
        width 100%
        font-size 18px
        color #262626
        padding-top 20px
      .discounts_list
        width 100%
        margin-top 10px
        .discounts_item
          clearFix()
          width 100%
          height 28px
          .discounts_keyword
            float left
            margin-right 10px
            height 20px
            line-height 20px
            text-align center
            width 26px
            font-size 14px
            background-color #cb33bd
            color #FFFFFF
            border-radius 8px
          .discounts_detail
            float left
            width 88%
            font-size 12px
            height 28px
            line-height 20px
  .shop_server_con
    width 100%
    .shop_server_name
      width 94%
      margin 30px 20px 0 20px
      font-size 18px
      color #262626
      padding-top 20px
    .server_lists /*ul*/
      clearFix()
      margin-top 15px
      width 100%
      .server_item/*li*/
        float left
        width 25%
        height 12px
        line-height 12px
        text-align center
        .items
          display flex
          justify-content center
          align-items center
          .item_name_icon
            margin-right 2px
            .iconfont
              font-size 12px
          .item_name
            margin-right 2px
            font-size 11px
          .item_question_mack
            .iconfont
              font-size 10px
  .shop_comment_extend
    width 100%
    .comment_extend_name
      width 94%
      margin 30px 20px 0 20px
      font-size 18px
      color #262626
    .comment_extend
      display inline-block
      width 94%
      margin 10px 20px 0 20px
      font-size 12px
      color #262626
    &::after /*为了让上拉菜单不与公告重叠？？？*/
      display block
      content ""
      height 30px
      width 100%
      background-color #ffffff
  .shop_up_icon
    position fixed
    width 100%
    text-align center
    bottom 10px
    z-index 100
    height 18px
    .iconfont
      font-size 16px
      color #333333